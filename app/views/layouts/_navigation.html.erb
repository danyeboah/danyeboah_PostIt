<ul class="mynav">
  <li>
    <%= link_to "Home", root_path, class: 'brand' %>
  </li>

  <li>
    <div class='btn-group nav_item'>
      <%= link_to '#', class: 'btn btn-small dropdown-toggle mynav', 'data-toggle' =>'dropdown' do %>
      Categories <span class ='caret'></span>
      <% end %>

      <ul class='dropdown-menu'>
        <% Category.all.each do |category| %>
        <li>
          <%= link_to category.name, category_path(category) %>
        </li>
        <% end %>
        
        <% if logged_in? && current_user.is_admin? %>
        
          <li class='divider'></li>
          <li> <%= link_to new_category_path do %>
            <i class="icon-plus"></i>
            New Category
            <% end %>
          </li>
        <% end %>
        
      </ul>
    </div>
  </li>

  <% if logged_in? %>
    <div class='btn-group nav_item'>
      <%= link_to '#', class: 'btn btn-small btn-success dropdown-toggle mynav', 'data-toggle' =>'dropdown' do %>
      Hello <%= current_user.username %><span class ='caret'></span>
      <% end %>

      <ul class='dropdown-menu'>
        <li> <%= link_to user_path(current_user) do %>
             <i class = "icon-user"></i> Show Profile
             <% end %>
        </li>
        <li> <%= link_to edit_user_path(current_user) do %>
             <i class = "icon-pencil"></i> Edit Profile
             <% end %>
        </li>
        <li> <%= link_to logout_path do %>
            <i class = "icon-remove-circle"></i> Log out
            <% end %>
        </li>


      </ul>
    </div>

  <% else %>

    <li class = "upbutton">
    <%= link_to "Sign Up!", register_path, class: 'btn btn-primary' %>
  </li>

   <li class = "upbutton">
      <%= link_to "Log in", login_path, class: 'btn btn-success' %>
    </li>
  
  

  <% end %>

</ul>
