<%= render 'shared/header', title: "Login" %>

<div class = 'row'>
  <div class = 'span4 well'>
    <%= form_tag('/login', method:'post') do %>
      <%= label_tag(:username) %>
      <%= text_field_tag(:username) %>

      <%= label_tag(:password) %>
      <%= password_field_tag(:password) %>
      
      <br/>
      <%= submit_tag "Login", class: 'btn btn-success' %>
    
    <% end %>
  </div>
</div>