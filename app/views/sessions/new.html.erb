<%= render 'shared/header', title: "Login" %>

<div class = 'row'>
  <div class = 'span4 well'>
    <%= form_tag('/login', method:'post') do %>
      <%= label_tag(:username) %>
      <%= text_field_tag(:username) %>

      <%= label_tag(:password) %>
      <%= password_field_tag(:password) %>
      
      <br/>
      <div class = "checkbox inline">
      <%= check_box_tag :remember_me, 1 %>
      <%= label_tag :remember_me %>
      </div>
      <br/>
      <br/>
        
      <%= submit_tag "Login", class: 'btn btn-success' %>
        <br/>
        <br/>
       <p> <%= link_to "Click here if you forgot your password?", new_password_reset_path %> </p>
    
    <% end %>
  </div>
</div>