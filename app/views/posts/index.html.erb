<h3>Welcome To African Financials -- A Forum for Discussing African Private Equity</h3>

<%= render 'shared/header', title: 'Financial Posts' %>

<p> <%= link_to 'New Post', new_post_path, class: "btn btn-success" %> </p>
<% @posts.each do |post| %>
	<div class = 'row'>
		<div class = 'span8 well'>
			<%= render post.categories %>
  	
			<h4><%= link_to post.title, post_path(post) %> </h4>
			<p><%= post.description %> </p>
			<span class = 'quiet'> posted by </span> <%= post.user.username %>
			<small> at <%= post.created_at %> </small>
			<p>
				<%= link_to pluralize(post.comments.size, "comment"), post_path(post) %>
			</p>
		</div>
	</div>
<% end %>



