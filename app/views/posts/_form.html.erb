<%= render 'shared/posterror', object: @post %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %> <br/>
  <%= f.label :url %>
  <%= f.text_field :url %> <br/>
  <%= f.label :description %>
  <%= f.text_area :description, size: "200x12", class: "span4" %><br/>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |checkb| %>
     <% checkb.label(class: "checkbox inline") {checkb.check_box(class: "checkbox") + checkb.text} %> 
     <% end %>

  <br/>
  <br/>

  <%= f.submit action, class: "btn btn-primary btn-large" %>
<% end %>
