<%= render 'shared/posterror', object: @user %>
<div class='row'>
  <div class= 'span4 well'>
    <%= form_for @user do |f| %>
      <%= f.label "First Name" %>
      <%= f.text_field :first_name %>

      <%= f.label "Last Name" %>
      <%= f.text_field :last_name %>

      <%= f.label "E-mail" %>
      <%= f.text_field :email %>

      <%= f.label :username %>
      <%= f.text_field :username %>
      
      <% if show_password %>
        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label "Confirm password" %>
        <%= f.password_field :password_confirmation %>

        <% else %>
        <br/>
        <%= link_to confirm_user_path, class: 'btn btn-warning btn-margin' do %>
          <%= "Change Password" %>
        <br/>
        <% end %>

      <% end %>

      <br/>
      <%= f.label "Timezone" %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
      <br/>

      <%= f.submit action, class: "btn btn-success btn-large" %>
    
    <% end %>
  </div>

</div>